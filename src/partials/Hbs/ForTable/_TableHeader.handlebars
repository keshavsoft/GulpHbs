<tr>
    <th data-field="KS-Serial" data-formatter="window.GlobalSerialFormatter">#</th>

    {{#each columns}}
    <th data-field="{{field}}" {{#if align}}data-align="{{align}}" {{/if}} {{#if
        filterControl}}data-filter-control="{{filterControl}}" {{/if}} {{#if (isVisible this)}}
        data-visible={{visible}}{{/if}}>
        {{title}}
    </th>
    {{/each}}
    <th data-field="KS-Save">
        Options
    </th>
</tr>

<script>
    window.GlobalSerialFormatter = (value, row, index) => {
        return index + 1;
    };
</script>